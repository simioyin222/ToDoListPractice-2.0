@model ToDoList.Models.Tag

@{
    ViewData["Title"] = "Add an Item to Tag";
}

<h2>Add an Item to @Model.Title</h2>

<form asp-action="AddItem">
    <input type="hidden" asp-for="TagId" />
    <div class="form-group">
        <label asp-for="ItemId">Select Item</label>
        <select asp-for="ItemId" asp-items="ViewBag.ItemId" class="form-control"></select>
    </div>
    <div class="form-group">
        <input type="submit" value="Add Item" class="btn btn-primary" />
    </div>
</form>

<a asp-action="Details" asp-route-id="@Model.TagId">Back to Tag Details</a>