@model ToDoList.Models.Tag

@{
    ViewData["Title"] = "Tag Details";
}

<h2>Tag Details: @Model.Title</h2>

@if (Model.JoinEntities != null && Model.JoinEntities.Any())
{
    <h3>Items with this Tag:</h3>
    <ul>
        @foreach (var join in Model.JoinEntities)
        {
            <li>@join.Item.Description</li>
        }
    </ul>
}
else
{
    <p>This tag is not associated with any items.</p>
}

<!-- Edit Tag Link -->
<div>
    <a asp-action="Edit" asp-route-id="@Model.TagId" class="btn btn-primary">Edit Tag</a>
</div>

<!-- Back to Tags List Link -->
<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>